{
    "name": "myshows-tracker",
    "version": "2.4.0",
    "description": "Myshows.me Firefox extension for tracking TV shows",
    "main": "extension/manifest.json",
    "scripts": {
        "prepare": "esno scripts/prepare.js",
        "js": "esno scripts/esbuild.config.js",
        "web-ext:ff": "web-ext run ---firefox-preview -source-dir extension",
        "web-ext:chrome": "web-ext run --target chromium --source-dir extension",
        "dev:chrome": "cross-env NODE_ENV=development TARGET=chrome run-p prepare js web-ext:chrome",
        "dev:ff": "cross-env NODE_ENV=development TARGET=firefox run-p prepare js web-ext:ff",
        "build:chrome": "cross-env TARGET=chrome run-s prepare js",
        "build:ff": "cross-env TARGET=firefox run-s prepare js",
        "buildzip:chrome": "run-s build:chrome zip",
        "buildzip:ff": "run-s build:ff zip",
        "zip": "web-ext build --source-dir extension",
        "lint": "eslint ./src",
        "lint:fix": "eslint --fix ./src"
    },
    "author": "Vitaly Yerofeyevsky",
    "license": "MPL-2.0",
    "dependencies": {
        "chokidar": "^3.5.3",
        "cross-env": "^7.0.3",
        "del": "^6.1.1",
        "dotenv": "^16.0.1",
        "esbuild": "^0.14.47",
        "eslint": "^8.18.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "esno": "^0.16.3",
        "fs-extra": "^10.1.0",
        "kolorist": "^1.5.1",
        "modern-normalize": "^1.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "2.7.1",
        "web-ext": "^7.1.0",
        "webextension-polyfill": "^0.9.0"
    }
}
