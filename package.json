{
    "name": "myshows-tracker",
    "version": "1.2.2",
    "description": "Myshows.me Firefox extension for tracking TV shows",
    "main": "manifest.json",
    "scripts": {
        "web-ext": "web-ext run --source-dir extension",
        "web-ext:ffdev": "web-ext run --firefox=firefoxdeveloperedition --source-dir extension",
        "webpack": "webpack --watch",
        "start": "npm-run-all --parallel webpack web-ext",
        "start:ffdev": "npm-run-all --parallel webpack web-ext:ffdev",
        "build:webpack": "webpack --mode production",
        "build:webext": "web-ext build --source-dir extension",
        "build": "npm-run-all --sequential build:webpack build:webext"
    },
    "author": "Vitaly Yerofeyevsky",
    "license": "MPL-2.0",
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "web-ext": "^3.0.0",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.1"
    },
    "eslintIgnore": [
        "l10n.js",
        "bundle.js"
    ],
    "dependencies": {}
}
