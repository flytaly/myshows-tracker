{
    "name": "myshows-tracker",
    "version": "2.0.0",
    "description": "Myshows.me Firefox extension for tracking TV shows",
    "main": "manifest.json",
    "scripts": {
        "web-ext": "web-ext run --source-dir extension",
        "web-ext:ffdev": "web-ext run --firefox=firefoxdeveloperedition --source-dir extension",
        "gulp:watch": "gulp watch",
        "start": "npm-run-all build:gulp --parallel gulp:watch web-ext",
        "start:ffdev": "npm-run-all build:gulp --parallel gulp:watch web-ext:ffdev",
        "build:gulp": "gulp build",
        "build:webext": "web-ext build --source-dir extension",
        "build": "npm-run-all --sequential build:gulp build:webext"
    },
    "author": "Vitaly Yerofeyevsky",
    "license": "MPL-2.0",
    "devDependencies": {
        "@babel/core": "^7.8.4",
        "@babel/preset-env": "^7.8.4",
        "babel-plugin-transform-define": "^2.0.0",
        "del": "^5.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-plugin-import": "^2.20.1",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "npm-run-all": "^4.1.5",
        "web-ext": "^4.1.0"
    },
    "dependencies": {}
}
